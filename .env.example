# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/mindbridge

# These are set automatically on Replit, but needed for local development:
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password  
PGDATABASE=mindbridge

# OpenAI Configuration (Required for AI analysis features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Session Configuration (Required - generate a secure random string)
SESSION_SECRET=your-super-secret-session-key-at-least-32-characters-long

# Development Configuration (Optional)
NODE_ENV=development