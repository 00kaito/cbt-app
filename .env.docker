# Docker Environment Configuration
# Copy this file to .env and update the values for your environment

# Database Configuration
POSTGRES_DB=mindbridge
POSTGRES_USER=mindbridge_user
POSTGRES_PASSWORD=your_secure_password_here

# Application Configuration
NODE_ENV=production
PORT=5000
SESSION_SECRET=your_super_secure_session_secret_at_least_32_characters_long

# Optional: OpenAI API Key for AI-powered therapy analysis
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Constructed DATABASE_URL (automatically set in docker-compose)
# DATABASE_URL=postgresql://mindbridge_user:your_secure_password_here@localhost:5432/mindbridge